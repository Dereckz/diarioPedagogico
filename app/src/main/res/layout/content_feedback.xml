<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    tools:context="com.dese.diario.Feedback"
    tools:showIn="@layout/activity_feedback">


    <EditText
        android:id="@+id/etFeedBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_200dp"
        android:layout_marginLeft="@dimen/padding_5dp"
        android:layout_marginRight="@dimen/padding_5dp"
        android:layout_marginTop="15dp"
        android:background="#eeeeee"
        android:gravity="start"
        android:hint="@string/tag_comment"
        android:inputType="textMultiLine"
        android:lines="5"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:singleLine="true"
        android:textColor="@color/black_54" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="10dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvItemsFeedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>
