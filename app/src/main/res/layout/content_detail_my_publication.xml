<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="80dp"
    tools:context="com.dese.diario.DetailMyPublication"
    tools:showIn="@layout/activity_detail_my_publication">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/tag_title" />
                                        <EditText
                                            android:id="@+id/etTitleMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@drawable/edit_text_design" />


                                </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/prompt_group" />
                                        <EditText
                                            android:id="@+id/etGrupoMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:background="@drawable/edit_text_design"
                                            android:enabled="false"/>


                                </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/input_desc" />

                                        <EditText
                                            android:id="@+id/etDescriptingMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edit_text_design"
                                            android:enabled="false"
                                            android:gravity="start"
                                            android:inputType="textMultiLine"
                                            android:lines="10"
                                            android:maxLines="10" />


                                </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lyContentImagenDetail"
                            android:visibility="gone"
                            android:orientation="vertical">
                                <FrameLayout
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="?colorAccent"/>
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvItemMyDetailPublicacion"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_span="3"
                                    tools:listitem="@layout/item_file"
                                    />

                        </LinearLayout>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/input_sent" />
                                        <EditText
                                            android:id="@+id/etFeelingsMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textMultiLine"
                                            android:lines="10"
                                            android:gravity="start"
                                            android:maxLines="10"
                                            android:background="@drawable/edit_text_design"
                                            android:enabled="false"/>


                                </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/input_eval" />
                                        <EditText
                                            android:id="@+id/etTestingMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textMultiLine"
                                            android:lines="10"
                                            android:gravity="start"
                                            android:maxLines="10"
                                            android:background="@drawable/edit_text_design"
                                            android:enabled="false"/>


                                </LinearLayout>
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/input_analis" />
                                        <EditText
                                            android:id="@+id/etAnalyzeMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textMultiLine"
                                            android:lines="10"
                                            android:gravity="start"
                                            android:maxLines="10"
                                            android:background="@drawable/edit_text_design"
                                            android:enabled="false"/>


                                </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/input_concl" />
                                        <EditText
                                            android:id="@+id/etConclusionMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textMultiLine"
                                            android:lines="10"
                                            android:gravity="start"
                                            android:maxLines="10"
                                            android:background="@drawable/edit_text_design"
                                            android:enabled="false"/>

                                </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="19dp"
                                            android:layout_marginLeft="16dp"
                                            android:layout_marginRight="16dp"
                                            android:layout_marginBottom="10dp"
                                            android:text="@string/input_plan" />
                                        <EditText
                                            android:id="@+id/etPlanMyPubE"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textMultiLine"
                                            android:lines="10"
                                            android:gravity="start"
                                            android:maxLines="10"
                                            android:background="@drawable/edit_text_design"
                                            android:enabled="false"/>

                                </LinearLayout>
                        </android.support.v7.widget.CardView>


                </LinearLayout>
        </ScrollView>



</LinearLayout>
